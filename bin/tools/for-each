#!/usr/bin/env bash

# This file will be checked separately.
# shellcheck disable=SC1091
. bin/lib/util.sh

find . "(" -type d -name .git -prune ")" -o "(" -type f -print0 ")" | {
  while IFS= read -rd "" file; do
    if is-a "$file" "$@"; then
      files+=("$file")
    fi
  done

  if compgen -e CB | grep -qFx CB; then
    "$CB" "${files[@]}"
  fi
}
